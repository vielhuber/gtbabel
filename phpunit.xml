<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
    verbose="true"
    stopOnFailure="false"
    backupGlobals="true"
>
    <testsuites>
        <testsuite
            name="testsuite"
        >
            <directory>tests/phpunit</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="display_errors" value="On" />
        <ini name="display_startup_errors" value="On" />
        <server name="HTTPS" value="off" />
        <server name="HTTP_HOST" value="gtbabel.local.vielhuber.de" />
        <server name="REQUEST_URI" value="/en/" />
    </php>
</phpunit>